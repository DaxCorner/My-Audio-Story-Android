<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#269FF1">

        <ImageView
            android:id="@+id/home_btn_listen_audio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/home_btn_pressed" />

        <ImageView
            android:id="@+id/homepage_logo"
            android:layout_width="250dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/top_logo" />

        <ImageView
            android:id="@+id/lib_btn_listen_audio"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/login_btn_listen"
            android:src="@drawable/lib_btn_pressed" />

        <ImageView
            android:id="@+id/login_btn_listen"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/login_btn_pressed" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/choose_book"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_below="@+id/header"
        android:src="@drawable/elis_star" />

    <ImageView
        android:id="@+id/book_cover"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_below="@id/choose_book"
        android:layout_marginTop="10dp"
        android:src="@drawable/book_cover" />

    <ImageView
        android:id="@+id/listen_book"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/book_cover"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="70dp"
        android:src="@drawable/listen_audio_btn_pressed" />


    <ImageView
        android:id="@+id/use_background_audio"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/listen_book"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="70dp"
        android:src="@drawable/use_bg_music_pressed"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/use_background_audio">

        <ImageView
            android:id="@+id/record_audio"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:src="@drawable/record_this_story_button" />


    </RelativeLayout>
</RelativeLayout>