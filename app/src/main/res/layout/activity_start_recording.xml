<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/recording_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/home_btn_start_recording"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/home_btn_pressed" />

            <ImageView
                android:id="@+id/homepage_logo"
                android:layout_width="250dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/top_logo" />

            <ImageView
                android:id="@+id/lib_btn_recording"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/login_btn_recording"
                android:src="@drawable/lib_btn_pressed" />

            <ImageView
                android:id="@+id/login_btn_recording"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="7dp"
                android:src="@drawable/login_btn_pressed" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/choose_book"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_below="@+id/header"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/record_your_own" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/choose_book"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/story_text_on_recording"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/bottom"
                    android:layout_below="@+id/choose_book"
                    android:text="Story text.........................................................................."
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-medium"
                    android:text="The End"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <ImageView
                    android:id="@+id/design"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/design_element" />
            </LinearLayout>
        </ScrollView>


        <ImageView
            android:id="@+id/start_count_down_timer_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:src="@drawable/start_countdown_and_record_button" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/save_share_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#269FF1">

            <ImageView
                android:id="@+id/home_btn_recorded"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/home_btn_pressed" />


            <ImageView
                android:id="@+id/homepage_logo1"
                android:layout_width="260dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/top_logo" />

            <ImageView
                android:id="@+id/lib_btn_recorded"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/login_btn_recorded"
                android:src="@drawable/lib_btn_pressed" />

            <ImageView
                android:id="@+id/login_btn_recorded"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="7dp"
                android:src="@drawable/login_btn_pressed" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/share_txt"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_below="@+id/header1"
            android:src="@drawable/share_story_text" />


        <ImageView
            android:id="@+id/story_ico"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/share_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/story_icon" />

        <RelativeLayout
            android:id="@+id/save_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/story_ico"
            android:layout_centerHorizontal="true"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/recorded_story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Name you recorded Story:"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/name_recorded_story"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/recorded_story"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/text_field"
                android:padding="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/save_name_txt"
            android:layout_centerHorizontal="true"
            android:padding="15dp">

            <ImageView

                android:id="@+id/save_story_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="2dp"
                android:src="@drawable/savebtn_pressed" />

            <ImageView
                android:id="@+id/share_story_btn_on_end"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/save_story_btn"
                android:layout_marginTop="20dp"
                android:padding="2dp"
                android:src="@drawable/share_btn_pressed" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>