<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:padding="5dp"
    android:background="@drawable/dark_line"
    android:id="@+id/recycler_layout">

    <ImageView
        android:id="@+id/story_play_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/story_icon" />

    <TextView
        android:id="@+id/story_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/story_play_btn"
        android:text="Amelia Bebelia"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#131313" />

    <ImageView
        android:padding="2dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/delete_story_btn"
        android:src="@drawable/share_icon"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:padding="2dp"
        android:id="@+id/delete_story_btn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/delete_icon" />

</RelativeLayout>