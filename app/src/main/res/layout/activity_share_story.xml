<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:src="@drawable/home_btn" />

        <ImageView
            android:id="@+id/homepage_logo"
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/top_logo" />

        <ImageView
            android:id="@+id/lib_btn_on_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/login_btn_main"
            android:src="@drawable/library_btn" />

        <ImageView
            android:id="@+id/login_btn_main"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/login_btn" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/share_book"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_below="@+id/header"
        android:src="@drawable/share_story_text" />

    <ImageView
        android:id="@+id/share_txt"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_below="@+id/share_book"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        android:src="@drawable/share_text" />

    <RelativeLayout
        android:id="@+id/send_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_txt"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Email:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/share_on_email_et"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@id/email"
            android:background="@drawable/text_field" />

        <TextView

            android:id="@+id/phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/share_on_email_et"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Phone No for text:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/share_on_phone_text_et"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@id/phone_no"
            android:background="@drawable/text_field" />
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_below="@id/share_on_phone_text_et"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/share_btn"/>
    </RelativeLayout>
<ImageView
    android:layout_below="@id/send_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/image"/>

</RelativeLayout>