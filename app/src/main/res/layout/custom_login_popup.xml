<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/login_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/log_in_popup" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/user_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="115dp"

                android:src="@drawable/user_name_text" />

            <EditText
                android:id="@+id/et_login_dialog"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_below="@id/user_name_txt"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/text_field" />

            <ImageView
                android:id="@+id/password_txt"
                android:layout_width="wrap_content"
                android:layout_height="20dp"

                android:layout_below="@id/et_login_dialog"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/passord_text" />

            <EditText
                android:id="@+id/et_password_dialog"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_below="@id/password_txt"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/text_field" />

            <ImageView
                android:id="@+id/login_dialog_btn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@id/et_password_dialog"
                android:src="@drawable/log_in_btn_dialog"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>