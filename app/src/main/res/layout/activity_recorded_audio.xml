<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:src="@drawable/home_btn" />

        <ImageView
            android:id="@+id/homepage_logo"
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/top_logo" />

        <ImageView
            android:id="@+id/lib_btn_save_story"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/login_btn_main"
            android:src="@drawable/library_btn" />

        <ImageView
            android:id="@+id/login_btn_main"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/login_btn" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/share_txt"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_below="@+id/header"
        android:src="@drawable/share_story_text" />


    <ImageView
        android:id="@+id/story_ico"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/share_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/story_icon" />

    <RelativeLayout
        android:id="@+id/save_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/story_ico"
        android:layout_centerHorizontal="true"
        android:paddingLeft="40dp"
        android:paddingTop="20dp"
        android:paddingRight="40dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/recorded_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Name you recorded Story:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#fff" />

        <EditText
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/name_recorded_story"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@id/recorded_story"
            android:background="@drawable/text_field"
            android:padding="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/save_name_txt">

        <ImageView
            android:padding="2dp"
            android:id="@+id/save_story_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/save_btn" />
        <ImageView
            android:padding="2dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/save_story_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/share_btn" />
    </RelativeLayout>
</RelativeLayout>