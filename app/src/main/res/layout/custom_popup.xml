<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
     android:layout_gravity="center_horizontal"

    android:orientation="vertical"
    android:padding="5dp">
<RelativeLayout
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/login_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/pop_up_login_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

    <ImageView
        android:id="@+id/select_login"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginTop="135dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/login_dialog"

        android:src="@drawable/log_in_btn" />
    <ImageView
        android:id="@+id/sign_upact_btn"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/select_login"
        android:layout_centerHorizontal="true"
        android:src="@drawable/create_account_btn"
        android:layout_marginBottom="20dp"/>

    </LinearLayout>
</RelativeLayout>

</RelativeLayout>